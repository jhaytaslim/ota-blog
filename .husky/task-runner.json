{
   "tasks": [
      {
         "name": "dotnet-format-example",
         "command": "dotnet",
         "args": [ "format", "./Dotnet-Rest-Template.sln" ],
         "include": [ "**/*.cs", "**/*.vb" ]
      },
      {
         "name": "git-commit-format",
         "command": "git",
         "args": [ "add", "." ],
         "include": [ "**/*.cs", "**/*.vb" ]
      }
